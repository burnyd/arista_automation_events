  - name: ping p2p links
    eos_command:
      commands:
        - ping {{ item }}
      provider: '{{ eos_connection }}'
    register: result
    failed_when: "'100% packet loss' in result.stdout"
    with_items: "{{ ebgp_peers[inventory_hostname].keys() }}"    

  - name: debug
    debug: var= result
